<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.home.HomeFragment">



        <androidx.core.widget.NestedScrollView
            android:fitsSystemWindows="true"
            android:layout_marginTop="25dp"
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



        <LinearLayout
            android:layout_marginTop="64dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tvUserCemsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/cemeteries_you_have_added"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="Cemeteries you have added" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvUsersAddedCems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toTopOf="@+id/tvAllCemsTitle"
                app:layout_constraintEnd_toEndOf="@+id/tvUserCemsTitle"
                app:layout_constraintHorizontal_bias="0.439"
                app:layout_constraintStart_toStartOf="@+id/tvUserCemsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvUserCemsTitle" />

            <TextView
                android:id="@+id/tvAllCemsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/all_cemeteries"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="All Cemeteries" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvAllCems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tvAllCemsTitle"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/tvAllCemsTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvAllCemsTitle"
                app:layout_constraintVertical_bias="0.0" />

        </LinearLayout>

        </androidx.core.widget.NestedScrollView>









</layout>